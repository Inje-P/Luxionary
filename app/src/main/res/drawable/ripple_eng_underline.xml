<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/eng_background"> <!-- Ripple Effect 색상 -->

    <!-- 배경색 -->
    <item
        android:top="-3dp"
        android:left="-3dp"
        android:right="-3dp"
        android:id="@+id/ripple_eng_underline">
        <shape android:shape="rectangle">
            <solid android:color="@color/main_white"></solid>
            <stroke android:color="@color/main_text" android:width="2dp"></stroke>
        </shape>
    </item>

</ripple>