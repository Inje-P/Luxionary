<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_white"
        android:orientation="vertical"
        tools:context=".DateActivity">

        <!-- Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9.4"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Main -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- Section 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="6">

                            <TextView
                                android:id="@+id/tvTitle1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/pretendard_800"
                                android:gravity="center"
                                android:text="오늘은"
                                android:textColor="@color/main_text"
                                android:textSize="32dp"></TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="4">

                            <TextView
                                android:id="@+id/tvTitle2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/pretendard_600"
                                android:gravity="center"
                                android:text="(영어, 독일어를 제외하고 월, 요일은 모두 소문자를 사용해요)"
                                android:textColor="@color/main_gray"
                                android:textSize="14dp"></TextView>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Section 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="9"
                        android:orientation="vertical">

                        <!-- Month -->
                        <LinearLayout
                            android:id="@+id/layout1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3.3"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/custom_underline_thin"
                            android:orientation="horizontal">

                            <!-- Korean -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5">

                                <TextView
                                    android:id="@+id/tvMonthTitle"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/pretendard_800"
                                    android:gravity="center_horizontal"
                                    android:layout_marginTop="28dp"
                                    android:text="1월"
                                    android:textColor="@color/main_text"
                                    android:textSize="18dp"></TextView>

                            </LinearLayout>

                            <!-- International -->
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="8.5">

                                <!-- English, French, German -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="5"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:id="@+id/llMonthEng"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:orientation="horizontal"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginBottom="20dp"
                                        android:background="@drawable/ripple_eng_underline"
                                        android:layout_weight="1">

                                        <TextView
                                            android:id="@+id/tvMonthEng"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginTop="20dp"
                                            android:text="January"
                                            android:textColor="@color/main_text"
                                            android:gravity="center_vertical"
                                            android:textSize="18dp"
                                            android:fontFamily="@font/nunitosans_800"></TextView>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/llMonthFra"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:orientation="horizontal"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginBottom="20dp"
                                        android:background="@drawable/ripple_fra_underline"
                                        android:layout_weight="1">

                                        <TextView
                                            android:id="@+id/tvMonthFra"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginTop="20dp"
                                            android:text="janvier"
                                            android:textColor="@color/main_text"
                                            android:gravity="center_vertical"
                                            android:textSize="18dp"
                                            android:fontFamily="@font/nunitosans_800"></TextView>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/llMonthDeu"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:orientation="horizontal"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginBottom="20dp"
                                        android:background="@drawable/ripple_deu_underline"
                                        android:layout_weight="1">

                                        <TextView
                                            android:id="@+id/tvMonthDeu"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginTop="20dp"
                                            android:text="Januar"
                                            android:textColor="@color/main_text"
                                            android:gravity="center_vertical"
                                            android:textSize="18dp"
                                            android:fontFamily="@font/nunitosans_800"></TextView>

                                    </LinearLayout>

                                </LinearLayout>

                                <!-- Italian, Spanish, Russian -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="5"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:id="@+id/llMonthIta"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:orientation="horizontal"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginBottom="20dp"
                                        android:background="@drawable/ripple_ita_underline"
                                        android:layout_weight="1">

                                        <TextView
                                            android:id="@+id/tvMonthIta"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginTop="20dp"
                                            android:text="gennaio"
                                            android:textColor="@color/main_text"
                                            android:gravity="center_vertical"
                                            android:textSize="18dp"
                                            android:fontFamily="@font/nunitosans_800"></TextView>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/llMonthSpa"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:orientation="horizontal"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginBottom="20dp"
                                        android:background="@drawable/ripple_spa_underline"
                                        android:layout_weight="1">

                                        <TextView
                                            android:id="@+id/tvMonthSpa"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginTop="20dp"
                                            android:text="enero"
                                            android:textColor="@color/main_text"
                                            android:gravity="center_vertical"
                                            android:textSize="18dp"
                                            android:fontFamily="@font/nunitosans_800"></TextView>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/llMonthRus"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:orientation="horizontal"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginBottom="20dp"
                                        android:background="@drawable/ripple_rus_underline"
                                        android:layout_weight="1">

                                        <TextView
                                            android:id="@+id/tvMonthRus"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginTop="20dp"
                                            android:text="январь"
                                            android:textColor="@color/main_text"
                                            android:gravity="center_vertical"
                                            android:textSize="18dp"
                                            android:fontFamily="@font/nunitosans_800"></TextView>

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Day of the Month -->
                        <LinearLayout
                            android:id="@+id/layout2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3.3"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/custom_underline_thin"
                            android:orientation="horizontal">

                            <!-- Korean -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5">

                                <TextView
                                    android:id="@+id/tvDoMTitle"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/pretendard_800"
                                    android:gravity="center_horizontal"
                                    android:layout_marginTop="28dp"
                                    android:text="27일"
                                    android:textColor="@color/main_text"
                                    android:textSize="18dp"></TextView>

                            </LinearLayout>

                            <!-- International -->
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="8.5">

                                <!-- English, French, German -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="5"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:id="@+id/llDoMEng"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:orientation="horizontal"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginBottom="20dp"
                                        android:background="@drawable/ripple_eng_underline"
                                        android:layout_weight="1">

                                        <TextView
                                            android:id="@+id/tvDoMEng"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginTop="20dp"
                                            android:text="twenty-seventh"
                                            android:textColor="@color/main_text"
                                            android:gravity="center_vertical"
                                            android:textSize="12dp"
                                            android:fontFamily="@font/nunitosans_800"></TextView>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/llDoMFra"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:orientation="horizontal"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginBottom="20dp"
                                        android:background="@drawable/ripple_fra_underline"
                                        android:layout_weight="1">

                                        <TextView
                                            android:id="@+id/tvDoMFra"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginTop="20dp"
                                            android:text="le vingt-sept"
                                            android:textColor="@color/main_text"
                                            android:gravity="center_vertical"
                                            android:textSize="12dp"
                                            android:fontFamily="@font/nunitosans_800"></TextView>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/llDoMDeu"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:orientation="horizontal"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginBottom="20dp"
                                        android:background="@drawable/ripple_deu_underline"
                                        android:layout_weight="1">

                                        <TextView
                                            android:id="@+id/tvDoMDeu"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginTop="20dp"
                                            android:text="der siebenundzwanzigste"
                                            android:textColor="@color/main_text"
                                            android:gravity="center_vertical"
                                            android:textSize="12dp"
                                            android:fontFamily="@font/nunitosans_800"></TextView>

                                    </LinearLayout>

                                </LinearLayout>

                                <!-- Italian, Spanish, Russian -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="5"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:id="@+id/llDoMIta"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:orientation="horizontal"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginBottom="20dp"
                                        android:background="@drawable/ripple_ita_underline"
                                        android:layout_weight="1">

                                        <TextView
                                            android:id="@+id/tvDoMIta"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginTop="20dp"
                                            android:text="il ventisette"
                                            android:textColor="@color/main_text"
                                            android:gravity="center_vertical"
                                            android:textSize="12dp"
                                            android:fontFamily="@font/nunitosans_800"></TextView>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/llDoMSpa"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:orientation="horizontal"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginBottom="20dp"
                                        android:background="@drawable/ripple_spa_underline"
                                        android:layout_weight="1">

                                        <TextView
                                            android:id="@+id/tvDoMSpa"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginTop="20dp"
                                            android:text="el veintisiete"
                                            android:textColor="@color/main_text"
                                            android:gravity="center_vertical"
                                            android:textSize="12dp"
                                            android:fontFamily="@font/nunitosans_800"></TextView>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/llDoMRus"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:orientation="horizontal"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginBottom="20dp"
                                        android:background="@drawable/ripple_rus_underline"
                                        android:layout_weight="1">

                                        <TextView
                                            android:id="@+id/tvDoMRus"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginTop="20dp"
                                            android:text="двадцать седьмое"
                                            android:textColor="@color/main_text"
                                            android:gravity="center_vertical"
                                            android:textSize="12dp"
                                            android:fontFamily="@font/nunitosans_800"></TextView>

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Day of the week -->
                        <LinearLayout
                            android:id="@+id/layout3"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3.3"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal">

                            <!-- Korean -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5">

                                <TextView
                                    android:id="@+id/tvDoWTitle"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/pretendard_800"
                                    android:gravity="center_horizontal"
                                    android:layout_marginTop="28dp"
                                    android:text="일요일"
                                    android:textColor="@color/main_text"
                                    android:textSize="16dp"></TextView>

                            </LinearLayout>

                            <!-- International -->
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="8.5">

                                <!-- English, French, German -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="5"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:id="@+id/llDoWEng"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:orientation="horizontal"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginBottom="20dp"
                                        android:background="@drawable/ripple_eng_underline"
                                        android:layout_weight="1">

                                        <TextView
                                            android:id="@+id/tvDoWEng"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginTop="20dp"
                                            android:text="Sunday"
                                            android:textColor="@color/main_text"
                                            android:gravity="center_vertical"
                                            android:textSize="18dp"
                                            android:fontFamily="@font/nunitosans_800"></TextView>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/llDoWFra"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:orientation="horizontal"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginBottom="20dp"
                                        android:background="@drawable/ripple_fra_underline"
                                        android:layout_weight="1">

                                        <TextView
                                            android:id="@+id/tvDoWFra"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginTop="20dp"
                                            android:text="dimanche"
                                            android:textColor="@color/main_text"
                                            android:gravity="center_vertical"
                                            android:textSize="18dp"
                                            android:fontFamily="@font/nunitosans_800"></TextView>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/llDoWDeu"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:orientation="horizontal"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginBottom="20dp"
                                        android:background="@drawable/ripple_deu_underline"
                                        android:layout_weight="1">

                                        <TextView
                                            android:id="@+id/tvDoWDeu"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginTop="20dp"
                                            android:text="Sonntag"
                                            android:textColor="@color/main_text"
                                            android:gravity="center_vertical"
                                            android:textSize="18dp"
                                            android:fontFamily="@font/nunitosans_800"></TextView>

                                    </LinearLayout>

                                </LinearLayout>

                                <!-- Italian, Spanish, Russian -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="5"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:id="@+id/llDoWIta"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginBottom="20dp"
                                        android:layout_weight="1"
                                        android:background="@drawable/ripple_ita_underline"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tvDoWIta"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginTop="20dp"
                                            android:fontFamily="@font/nunitosans_800"
                                            android:gravity="center_vertical"
                                            android:text="domenica"
                                            android:textColor="@color/main_text"
                                            android:textSize="18dp"></TextView>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/llDoWSpa"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:orientation="horizontal"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginBottom="20dp"
                                        android:background="@drawable/ripple_spa_underline"
                                        android:layout_weight="1">

                                        <TextView
                                            android:id="@+id/tvDoWSpa"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginTop="20dp"
                                            android:text="domingo"
                                            android:textColor="@color/main_text"
                                            android:gravity="center_vertical"
                                            android:textSize="18dp"
                                            android:fontFamily="@font/nunitosans_800"></TextView>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/llDoWRus"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:orientation="horizontal"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginBottom="20dp"
                                        android:background="@drawable/ripple_rus_underline"
                                        android:layout_weight="1">

                                        <TextView
                                            android:id="@+id/tvDoWRus"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginTop="20dp"
                                            android:text="воскресенье"
                                            android:textColor="@color/main_text"
                                            android:gravity="center_vertical"
                                            android:textSize="18dp"
                                            android:fontFamily="@font/nunitosans_800"></TextView>

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Menu Bar (Bottom) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/custom_menubar">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"></Space>

            <!-- Sidebar -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="3">

                <ImageButton
                    android:id="@+id/btnSidebar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/custom_ripple_transparent"
                    app:srcCompat="@drawable/ic_sidebar"
                    android:padding="12dp"
                    android:scaleType="fitCenter"></ImageButton>

            </LinearLayout>

            <!-- Home -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="3">

                <ImageButton
                    android:id="@+id/btnHome"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/custom_ripple_transparent"
                    app:srcCompat="@drawable/ic_home"
                    android:padding="12dp"
                    android:scaleType="fitCenter"></ImageButton>

            </LinearLayout>

            <!-- Update -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="3">

                <ImageButton
                    android:id="@+id/btnUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/custom_ripple_transparent"
                    app:srcCompat="@drawable/ic_update"
                    android:padding="12dp"
                    android:scaleType="fitCenter"></ImageButton>

            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"></Space>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/activity_drawer"/>

</androidx.drawerlayout.widget.DrawerLayout>