<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/rus_bg"
        tools:context=".MainEng">

        <!-- Profile -->
        <LinearLayout
            android:id="@+id/layoutProfile"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/main_rus_bg2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="horizontal">

                <Space
                    android:layout_width="30dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/custom_underline"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <!-- Title -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_weight="7"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="8">

                            <TextView
                                android:id="@+id/tvTitle1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/pretendard_800"
                                android:gravity="bottom"
                                android:text="Русский"
                                android:textColor="@color/rus_main"
                                android:textSize="40dp"></TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2">

                            <TextView
                                android:id="@+id/tvTitle2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/pretendard_800"
                                android:gravity="bottom"
                                android:paddingBottom="10dp"
                                android:text="러시아어"
                                android:textColor="@color/main_text"
                                android:textSize="18dp"></TextView>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Avatar -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_weight="3"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgAvatar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="65dp"
                            android:padding="5dp"
                            android:src="@drawable/avt_male1"></ImageView>

                    </LinearLayout>

                </LinearLayout>

                <Space
                    android:layout_width="30dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>

        <!-- ScrollView -->
        <ScrollView
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!-- Container -->
            <LinearLayout
                android:id="@+id/layoutContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Main Layout -->
                <LinearLayout
                    android:id="@+id/layoutMain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="30dp"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <!-- Banner -->
                        <LinearLayout
                            android:id="@+id/llBanner"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:orientation="vertical">

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/nunitosans_900"
                                android:scaleType="fitCenter"
                                android:stateListAnimator="@null"
                                android:textColor="@color/main_white"
                                app:srcCompat="@drawable/level_1_none"></ImageButton>

                        </LinearLayout>

                        <!-- 1 -->
                        <LinearLayout
                            android:id="@+id/llRus1"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnRus1"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:textColor="@color/rus_background"
                                android:gravity="center"
                                android:fontFamily="@font/nunitosans_900"
                                android:text="АЛФАВИТ"
                                android:textSize="25dp"
                                android:background="@drawable/pastel_ripple_rus"
                                android:stateListAnimator="@null"></Button>

                            <TextView
                                android:id="@+id/tvRus1"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="1. 알파벳과 발음"
                                android:textColor="@color/main_text"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:textSize="15dp"></TextView>

                        </LinearLayout>

                        <!-- 2 -->
                        <LinearLayout
                            android:id="@+id/llRus2"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnRus2"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:textColor="@color/rus_background"
                                android:gravity="center"
                                android:fontFamily="@font/nunitosans_900"
                                android:text="ПРИВЕТСТВИЕ"
                                android:textSize="25dp"
                                android:background="@drawable/pastel_ripple_rus"
                                android:stateListAnimator="@null"></Button>

                            <TextView
                                android:id="@+id/tvRus2"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="2. 인사말"
                                android:textColor="@color/main_text"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:textSize="15dp"></TextView>

                        </LinearLayout>

                        <!-- 3 -->
                        <LinearLayout
                            android:id="@+id/llRus3"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnRus3"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:textColor="@color/rus_background"
                                android:gravity="center"
                                android:fontFamily="@font/nunitosans_900"
                                android:text="ЧИСЛА"
                                android:textSize="25dp"
                                android:background="@drawable/pastel_ripple_rus"
                                android:stateListAnimator="@null"></Button>

                            <TextView
                                android:id="@+id/tvRus3"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="3. 숫자"
                                android:textColor="@color/main_text"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:textSize="15dp"></TextView>

                        </LinearLayout>

                        <!-- 4 -->
                        <LinearLayout
                            android:id="@+id/llRus4"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnRus4"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:textColor="@color/rus_background"
                                android:gravity="center"
                                android:fontFamily="@font/nunitosans_900"
                                android:text="ДАТА И ВРЕМЯ"
                                android:textSize="25dp"
                                android:background="@drawable/pastel_ripple_rus"
                                android:stateListAnimator="@null"></Button>

                            <TextView
                                android:id="@+id/tvRus4"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="4. 날짜와 시간"
                                android:textColor="@color/main_text"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:textSize="15dp"></TextView>

                        </LinearLayout>

                        <!-- 5 -->
                        <LinearLayout
                            android:id="@+id/llRus5"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnRus5"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:textColor="@color/rus_background"
                                android:gravity="center"
                                android:fontFamily="@font/nunitosans_900"
                                android:text="ТЕЛО"
                                android:textSize="25dp"
                                android:background="@drawable/pastel_ripple_rus"
                                android:stateListAnimator="@null"></Button>

                            <TextView
                                android:id="@+id/tvRus5"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="5. 신체"
                                android:textColor="@color/main_text"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:textSize="15dp"></TextView>

                        </LinearLayout>

                        <!-- 6 -->
                        <LinearLayout
                            android:id="@+id/llRus6"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnRus6"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:textColor="@color/rus_background"
                                android:gravity="center"
                                android:fontFamily="@font/nunitosans_900"
                                android:text="СЕМЬЯ"
                                android:textSize="25dp"
                                android:background="@drawable/pastel_ripple_rus"
                                android:stateListAnimator="@null"></Button>

                            <TextView
                                android:id="@+id/tvRus6"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="6. 가족"
                                android:textColor="@color/main_text"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:textSize="15dp"></TextView>

                        </LinearLayout>

                        <!-- 7 -->
                        <LinearLayout
                            android:id="@+id/llRus7"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnRus7"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:textColor="@color/rus_background"
                                android:gravity="center"
                                android:fontFamily="@font/nunitosans_900"
                                android:text="ЕДЫ"
                                android:textSize="25dp"
                                android:background="@drawable/pastel_ripple_rus"
                                android:stateListAnimator="@null"></Button>

                            <TextView
                                android:id="@+id/tvRus7"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="7. 음식"
                                android:textColor="@color/main_text"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:textSize="15dp"></TextView>

                        </LinearLayout>

                        <!-- 8 -->
                        <LinearLayout
                            android:id="@+id/llRus8"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnRus8"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:textColor="@color/rus_background"
                                android:gravity="center"
                                android:fontFamily="@font/nunitosans_900"
                                android:text="ПРИЛАГАТЕЛЬНЫЕ"
                                android:textSize="25dp"
                                android:background="@drawable/pastel_ripple_rus"
                                android:stateListAnimator="@null"></Button>

                            <TextView
                                android:id="@+id/tvRus8"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="8. 형용사"
                                android:textColor="@color/main_text"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:textSize="15dp"></TextView>

                        </LinearLayout>

                        <!-- 9 -->
                        <LinearLayout
                            android:id="@+id/llRus9"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnRus9"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:textColor="@color/rus_background"
                                android:gravity="center"
                                android:fontFamily="@font/nunitosans_900"
                                android:text="МЕСТА"
                                android:textSize="25dp"
                                android:background="@drawable/pastel_ripple_rus"
                                android:stateListAnimator="@null"></Button>

                            <TextView
                                android:id="@+id/tvRus9"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="9. 장소"
                                android:textColor="@color/main_text"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:textSize="15dp"></TextView>

                        </LinearLayout>

                        <!-- 10 -->
                        <LinearLayout
                            android:id="@+id/llRus10"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnRus10"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:textColor="@color/rus_background"
                                android:gravity="center"
                                android:fontFamily="@font/nunitosans_900"
                                android:text="ПРЕДЛОГИ"
                                android:textSize="25dp"
                                android:background="@drawable/pastel_ripple_rus"
                                android:stateListAnimator="@null"></Button>

                            <TextView
                                android:id="@+id/tvRus10"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="10. 전치사"
                                android:textColor="@color/main_text"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:textSize="15dp"></TextView>

                        </LinearLayout>

                        <!-- 11 -->
                        <LinearLayout
                            android:id="@+id/llRus11"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnRus11"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:textColor="@color/rus_background"
                                android:gravity="center"
                                android:fontFamily="@font/nunitosans_900"
                                android:text="ФРУКТЫ И ОВОЩИ"
                                android:textSize="22dp"
                                android:background="@drawable/pastel_ripple_rus"
                                android:stateListAnimator="@null"></Button>

                            <TextView
                                android:id="@+id/tvRus11"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="11. 과일과 채소"
                                android:textColor="@color/main_text"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:textSize="15dp"></TextView>

                        </LinearLayout>

                        <!-- 12 -->
                        <LinearLayout
                            android:id="@+id/llRus12"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnRus12"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:textColor="@color/rus_background"
                                android:gravity="center"
                                android:fontFamily="@font/nunitosans_900"
                                android:text="КУЛИНАРИЯ"
                                android:textSize="25dp"
                                android:background="@drawable/pastel_ripple_rus"
                                android:stateListAnimator="@null"></Button>

                            <TextView
                                android:id="@+id/tvRus12"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="12. 요리"
                                android:textColor="@color/main_text"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:textSize="15dp"></TextView>

                        </LinearLayout>

                        <!-- 13 -->
                        <LinearLayout
                            android:id="@+id/llRus13"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnRus13"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:textColor="@color/rus_background"
                                android:gravity="center"
                                android:fontFamily="@font/nunitosans_900"
                                android:text="ПОКУПКИ"
                                android:textSize="25dp"
                                android:background="@drawable/pastel_ripple_rus"
                                android:stateListAnimator="@null"></Button>

                            <TextView
                                android:id="@+id/tvRus13"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="13. 쇼핑"
                                android:textColor="@color/main_text"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:textSize="15dp"></TextView>

                        </LinearLayout>

                        <!-- 14 -->
                        <LinearLayout
                            android:id="@+id/llRus14"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnRus14"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:textColor="@color/rus_background"
                                android:gravity="center"
                                android:fontFamily="@font/nunitosans_900"
                                android:text="СТРАНЫ"
                                android:textSize="25dp"
                                android:background="@drawable/pastel_ripple_rus"
                                android:stateListAnimator="@null"></Button>

                            <TextView
                                android:id="@+id/tvRus14"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="14. 국가"
                                android:textColor="@color/main_text"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:textSize="15dp"></TextView>

                        </LinearLayout>

                        <!-- 15 -->
                        <LinearLayout
                            android:id="@+id/llRus15"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnRus15"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:textColor="@color/rus_background"
                                android:gravity="center"
                                android:fontFamily="@font/nunitosans_900"
                                android:text="ПУТЕШЕСТВИЕ"
                                android:textSize="25dp"
                                android:background="@drawable/pastel_ripple_rus"
                                android:stateListAnimator="@null"></Button>

                            <TextView
                                android:id="@+id/tvRus15"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="15. 여행"
                                android:textColor="@color/main_text"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:textSize="15dp"></TextView>

                        </LinearLayout>

                    </LinearLayout>

                    <Space
                        android:layout_width="30dp"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <!-- Menu Bar (Bottom) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/custom_menubar">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"></Space>

            <!-- Sidebar -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="3">

                <ImageButton
                    android:id="@+id/btnSidebar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/custom_ripple_transparent"
                    app:srcCompat="@drawable/ic_sidebar"
                    android:padding="12dp"
                    android:scaleType="fitCenter"></ImageButton>

            </LinearLayout>

            <!-- Home -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="3">

                <ImageButton
                    android:id="@+id/btnHome"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/custom_ripple_transparent"
                    app:srcCompat="@drawable/ic_home"
                    android:padding="12dp"
                    android:scaleType="fitCenter"></ImageButton>

            </LinearLayout>

            <!-- Update -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="3">

                <ImageButton
                    android:id="@+id/btnUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/custom_ripple_transparent"
                    app:srcCompat="@drawable/ic_update"
                    android:padding="12dp"
                    android:scaleType="fitCenter"></ImageButton>

            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"></Space>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/activity_drawer"/>

</androidx.drawerlayout.widget.DrawerLayout>