                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/box_white"
                        android:elevation="3dp"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <!-- 1 -->
                        <LinearLayout
                            android:id="@+id/ll1"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv1a"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/nunitosans_900"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="ch"
                                android:textColor="@color/eng_background"
                                android:textSize="20dp"></TextView>

                            <TextView
                                android:id="@+id/tv1b"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/nunitosans_700"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="chocolate"
                                android:textColor="@color/main_text"
                                android:textSize="16dp"></TextView>

                            <TextView
                                android:id="@+id/tv1c"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/nunitosans_700"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="choreography"
                                android:textColor="@color/main_text"
                                android:textSize="16dp"></TextView>

                        </LinearLayout>

                        <!-- 2 -->
                        <LinearLayout
                            android:id="@+id/ll2"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv2a"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/nunitosans_900"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="dg"
                                android:textColor="@color/eng_background"
                                android:textSize="20dp"></TextView>

                            <TextView
                                android:id="@+id/tv2b"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/nunitosans_700"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="edge"
                                android:textColor="@color/main_text"
                                android:textSize="16dp"></TextView>

                            <TextView
                                android:id="@+id/tv2c"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/nunitosans_700"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="acknowledgement"
                                android:textColor="@color/main_text"
                                android:textSize="16dp"></TextView>

                        </LinearLayout>

                        <!-- 3 -->
                        <LinearLayout
                            android:id="@+id/ll3"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv3a"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/nunitosans_900"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="gh"
                                android:textColor="@color/eng_background"
                                android:textSize="20dp"></TextView>

                            <TextView
                                android:id="@+id/tv3b"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/nunitosans_700"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="tough"
                                android:textColor="@color/main_text"
                                android:textSize="16dp"></TextView>

                            <TextView
                                android:id="@+id/tv3c"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/nunitosans_700"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="enlightening"
                                android:textColor="@color/main_text"
                                android:textSize="16dp"></TextView>

                        </LinearLayout>

                        <!-- 4 -->
                        <LinearLayout
                            android:id="@+id/ll4"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv4a"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/nunitosans_900"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="gu"
                                android:textColor="@color/eng_background"
                                android:textSize="20dp"></TextView>

                            <TextView
                                android:id="@+id/tv4b"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/nunitosans_700"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="vogue"
                                android:textColor="@color/main_text"
                                android:textSize="16dp"></TextView>

                            <TextView
                                android:id="@+id/tv4c"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/nunitosans_700"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="guarantee"
                                android:textColor="@color/main_text"
                                android:textSize="16dp"></TextView>

                        </LinearLayout>

                        <!-- 5 -->
                        <LinearLayout
                            android:id="@+id/ll5"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv5a"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/nunitosans_900"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="ng"
                                android:textColor="@color/eng_background"
                                android:textSize="20dp"></TextView>

                            <TextView
                                android:id="@+id/tv5b"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/nunitosans_700"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="swing"
                                android:textColor="@color/main_text"
                                android:textSize="16dp"></TextView>

                            <TextView
                                android:id="@+id/tv5c"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/nunitosans_700"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="accordingly"
                                android:textColor="@color/main_text"
                                android:textSize="16dp"></TextView>

                        </LinearLayout>

                        <!-- 6 -->
                        <LinearLayout
                            android:id="@+id/ll6"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv6a"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/nunitosans_900"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="sc"
                                android:textColor="@color/eng_background"
                                android:textSize="20dp"></TextView>

                            <TextView
                                android:id="@+id/tv6b"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/nunitosans_700"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="science"
                                android:textColor="@color/main_text"
                                android:textSize="16dp"></TextView>

                            <TextView
                                android:id="@+id/tv6c"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/nunitosans_700"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="reminiscence"
                                android:textColor="@color/main_text"
                                android:textSize="16dp"></TextView>

                        </LinearLayout>

                        <!-- 7 -->
                        <LinearLayout
                            android:id="@+id/ll7"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv7a"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/nunitosans_900"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="tch"
                                android:textColor="@color/eng_background"
                                android:textSize="20dp"></TextView>

                            <TextView
                                android:id="@+id/tv7b"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/nunitosans_700"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="match"
                                android:textColor="@color/main_text"
                                android:textSize="16dp"></TextView>

                            <TextView
                                android:id="@+id/tv7c"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/nunitosans_700"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="dispatcher"
                                android:textColor="@color/main_text"
                                android:textSize="16dp"></TextView>

                        </LinearLayout>

                        <!-- 8 -->
