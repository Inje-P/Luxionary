<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_bg"
        android:orientation="vertical">

        <!-- Menu Bar (Top) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/top_white"
            android:elevation="3dp"
            android:orientation="horizontal">

            <!-- Prev -->
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btnPrev"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/custom_ripple_transparent"
                    android:contentDescription="Prev Button"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_chevron_left"></ImageButton>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/pretendard_800"
                    android:gravity="center"
                    android:text="1. Greeting"
                    android:textColor="@color/main_text"
                    android:textSize="16dp"></TextView>

            </LinearLayout>

            <!-- Next -->
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btnNext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/custom_ripple_transparent"
                    android:contentDescription="Next Button"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_chevron_right"></ImageButton>

            </LinearLayout>

        </LinearLayout>

        <!-- ScrollView -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent">

            <!-- Container -->
            <LinearLayout
                android:id="@+id/layoutContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Main Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:background="@drawable/box_white"
                    android:elevation="3dp"
                    android:orientation="vertical">

                    <!-- Title -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnTitle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/ripple_ita_sqr"
                            android:fontFamily="@font/nunitosans_900"
                            android:gravity="center"
                            android:paddingBottom="5dp"
                            android:stateListAnimator="@null"
                            android:text="I pronomi soggettivi"
                            android:textAllCaps="false"
                            android:textColor="@color/ita_background"
                            android:textSize="35dp" />

                    </LinearLayout>

                    <!-- Horizontal Line 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgHorizontal1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/horizontal" />

                    </LinearLayout>

                    <!-- Table 1 -->
                    <LinearLayout
                        android:id="@+id/llTable1"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:orientation="horizontal">

                                    <Button
                                        android:id="@+id/btnText1_1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/ripple_ita_sqr"
                                        android:fontFamily="@font/nunitosans_800"
                                        android:gravity="left|center"
                                        android:stateListAnimator="@null"
                                        android:text="Io"
                                        android:textAllCaps="false"
                                        android:textColor="@color/main_text"
                                        android:textSize="20dp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:orientation="horizontal">

                                    <Button
                                        android:id="@+id/btnText1_2"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/ripple_ita_sqr"
                                        android:fontFamily="@font/nunitosans_800"
                                        android:gravity="left|center"
                                        android:stateListAnimator="@null"
                                        android:text="Tu"
                                        android:textAllCaps="false"
                                        android:textColor="@color/main_text"
                                        android:textSize="20dp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:orientation="horizontal">

                                    <Button
                                        android:id="@+id/btnText1_3"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/ripple_ita_sqr"
                                        android:fontFamily="@font/nunitosans_800"
                                        android:gravity="left|center"
                                        android:stateListAnimator="@null"
                                        android:text="Lui / Lei"
                                        android:textAllCaps="false"
                                        android:textColor="@color/main_text"
                                        android:textSize="20dp" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="30dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/imgVertical1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/vertical" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:orientation="horizontal">

                                    <Button
                                        android:id="@+id/btnText1_4"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/ripple_ita_sqr"
                                        android:fontFamily="@font/nunitosans_800"
                                        android:gravity="left|center"
                                        android:stateListAnimator="@null"
                                        android:text="Noi"
                                        android:textAllCaps="false"
                                        android:textColor="@color/main_text"
                                        android:textSize="20dp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:orientation="horizontal">

                                    <Button
                                        android:id="@+id/btnText1_5"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/ripple_ita_sqr"
                                        android:fontFamily="@font/nunitosans_800"
                                        android:gravity="left|center"
                                        android:stateListAnimator="@null"
                                        android:text="Voi"
                                        android:textAllCaps="false"
                                        android:textColor="@color/main_text"
                                        android:textSize="20dp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:orientation="horizontal">

                                    <Button
                                        android:id="@+id/btnText1_6"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/ripple_ita_sqr"
                                        android:fontFamily="@font/nunitosans_800"
                                        android:gravity="left|center"
                                        android:stateListAnimator="@null"
                                        android:text="Loro"
                                        android:textAllCaps="false"
                                        android:textColor="@color/main_text"
                                        android:textSize="20dp" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Button 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/btnDown1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="bottom"
                            android:background="@drawable/custom_ripple_transparent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/btn_down" />

                    </LinearLayout>

                    <!-- Horizontal Line 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgHorizontal2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/horizontal" />

                    </LinearLayout>

                    <!-- Table 2 -->
                    <LinearLayout
                        android:id="@+id/llTable2"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:orientation="horizontal">

                                    <Button
                                        android:id="@+id/btnText2_1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/ripple_ita_sqr"
                                        android:fontFamily="@font/nunitosans_800"
                                        android:gravity="left|center"
                                        android:stateListAnimator="@null"
                                        android:text="(Io) Sono"
                                        android:textAllCaps="false"
                                        android:textColor="@color/main_text"
                                        android:textSize="20dp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:orientation="horizontal">

                                    <Button
                                        android:id="@+id/btnText2_2"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/ripple_ita_sqr"
                                        android:fontFamily="@font/nunitosans_800"
                                        android:gravity="left|center"
                                        android:stateListAnimator="@null"
                                        android:text="(Tu) Sei"
                                        android:textAllCaps="false"
                                        android:textColor="@color/main_text"
                                        android:textSize="20dp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:orientation="horizontal">

                                    <Button
                                        android:id="@+id/btnText2_3"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/ripple_ita_sqr"
                                        android:fontFamily="@font/nunitosans_800"
                                        android:gravity="left|center"
                                        android:stateListAnimator="@null"
                                        android:text="Lui / Lei è"
                                        android:textAllCaps="false"
                                        android:textColor="@color/main_text"
                                        android:textSize="20dp" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="30dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/imgVertical2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/vertical" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:orientation="horizontal">

                                    <Button
                                        android:id="@+id/btnText2_4"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/ripple_ita_sqr"
                                        android:fontFamily="@font/nunitosans_800"
                                        android:gravity="left|center"
                                        android:stateListAnimator="@null"
                                        android:text="(Noi) Siamo"
                                        android:textAllCaps="false"
                                        android:textColor="@color/main_text"
                                        android:textSize="20dp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:orientation="horizontal">

                                    <Button
                                        android:id="@+id/btnText2_5"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/ripple_ita_sqr"
                                        android:fontFamily="@font/nunitosans_800"
                                        android:gravity="left|center"
                                        android:stateListAnimator="@null"
                                        android:text="(Voi) Siete"
                                        android:textAllCaps="false"
                                        android:textColor="@color/main_text"
                                        android:textSize="20dp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:orientation="horizontal">

                                    <Button
                                        android:id="@+id/btnText2_6"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/ripple_ita_sqr"
                                        android:fontFamily="@font/nunitosans_800"
                                        android:gravity="left|center"
                                        android:stateListAnimator="@null"
                                        android:text="Loro sono"
                                        android:textAllCaps="false"
                                        android:textColor="@color/main_text"
                                        android:textSize="20dp" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Button 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/btnDown2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="bottom"
                            android:background="@drawable/custom_ripple_transparent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/btn_down" />

                    </LinearLayout>

                    <!-- Horizontal Line 3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgHorizontal3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/horizontal" />

                    </LinearLayout>

                    <!-- Table 3 -->
                    <LinearLayout
                        android:id="@+id/llTable3"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/btnText3_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/ripple_ita_sqr"
                                    android:fontFamily="@font/nunitosans_800"
                                    android:gravity="left|center"
                                    android:stateListAnimator="@null"
                                    android:text="Sono Lorenzo."
                                    android:textAllCaps="false"
                                    android:textColor="@color/main_text"
                                    android:textSize="20dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/btnText3_2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/ripple_ita_sqr"
                                    android:fontFamily="@font/nunitosans_800"
                                    android:gravity="left|center"
                                    android:stateListAnimator="@null"
                                    android:text="Sei Sofia."
                                    android:textAllCaps="false"
                                    android:textColor="@color/main_text"
                                    android:textSize="20dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/btnText3_3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/ripple_ita_sqr"
                                    android:fontFamily="@font/nunitosans_800"
                                    android:gravity="left|center"
                                    android:stateListAnimator="@null"
                                    android:text="Lui è Francesco."
                                    android:textAllCaps="false"
                                    android:textColor="@color/main_text"
                                    android:textSize="20dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/btnText3_4"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/ripple_ita_sqr"
                                    android:fontFamily="@font/nunitosans_800"
                                    android:gravity="left|center"
                                    android:stateListAnimator="@null"
                                    android:text="Lei è Giulia."
                                    android:textAllCaps="false"
                                    android:textColor="@color/main_text"
                                    android:textSize="20dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/btnText3_5"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/ripple_ita_sqr"
                                    android:fontFamily="@font/nunitosans_800"
                                    android:gravity="left|center"
                                    android:stateListAnimator="@null"
                                    android:text="Siamo una famiglia."
                                    android:textAllCaps="false"
                                    android:textColor="@color/main_text"
                                    android:textSize="20dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/btnText3_6"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/ripple_ita_sqr"
                                    android:fontFamily="@font/nunitosans_800"
                                    android:gravity="left|center"
                                    android:stateListAnimator="@null"
                                    android:text="Siete amici."
                                    android:textAllCaps="false"
                                    android:textColor="@color/main_text"
                                    android:textSize="20dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/btnText3_7"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/ripple_ita_sqr"
                                    android:fontFamily="@font/nunitosans_800"
                                    android:gravity="left|center"
                                    android:stateListAnimator="@null"
                                    android:text="Loro sono colleghi."
                                    android:textAllCaps="false"
                                    android:textColor="@color/main_text"
                                    android:textSize="20dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/btnEnd"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="bottom"
                            android:background="@drawable/custom_ripple_transparent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/btn_next" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <!-- Menu Bar (Bottom) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_menubar2"
            android:elevation="3dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"></Space>

            <!-- Sidebar -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btnSidebar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/custom_ripple_transparent"
                    android:contentDescription="Sidebar Button"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_sidebar"></ImageButton>

            </LinearLayout>

            <!-- Home -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btnHome"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/custom_ripple_transparent"
                    android:contentDescription="Home Button"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_home"></ImageButton>

            </LinearLayout>

            <!-- Update -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btnUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/custom_ripple_transparent"
                    android:contentDescription="Update Button"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_update"></ImageButton>

            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"></Space>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/activity_drawer" />

</androidx.drawerlayout.widget.DrawerLayout>