<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ita_bg"
        android:orientation="vertical"
        tools:context=".MainEng">

        <!-- Profile -->
        <LinearLayout
            android:id="@+id/layoutProfile"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/main_ita_bg2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="horizontal">

                <Space
                    android:layout_width="30dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/custom_underline"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <!-- Title -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_weight="7"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="8">

                            <TextView
                                android:id="@+id/tvTitle1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/pretendard_800"
                                android:gravity="bottom"
                                android:text="Italiano"
                                android:textColor="@color/ita_main"
                                android:textSize="40dp"></TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2">

                            <TextView
                                android:id="@+id/tvTitle2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/pretendard_800"
                                android:gravity="bottom"
                                android:paddingBottom="10dp"
                                android:text="이탈리아어"
                                android:textColor="@color/main_text"
                                android:textSize="18dp"></TextView>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Avatar -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_weight="3"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgAvatar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="65dp"
                            android:padding="5dp"
                            android:src="@drawable/avt_male1"></ImageView>

                    </LinearLayout>

                </LinearLayout>

                <Space
                    android:layout_width="30dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>

        <!-- ScrollView -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent">

            <!-- Container -->
            <LinearLayout
                android:id="@+id/layoutContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Main Layout -->
                <LinearLayout
                    android:id="@+id/layoutMain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="30dp"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:orientation="vertical">

                        <!-- Banner -->
                        <LinearLayout
                            android:id="@+id/llBanner"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:orientation="vertical">

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/nunitosans_900"
                                android:scaleType="fitCenter"
                                android:stateListAnimator="@null"
                                android:textColor="@color/main_white"
                                app:srcCompat="@drawable/level_1_none"></ImageButton>

                        </LinearLayout>

                        <!-- 1 -->
                        <LinearLayout
                            android:id="@+id/llIta1"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnIta1"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:background="@drawable/pastel_ripple_ita"
                                android:fontFamily="@font/nunitosans_900"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="L'ALFABETO"
                                android:textColor="@color/ita_background"
                                android:textSize="25dp"></Button>

                            <TextView
                                android:id="@+id/tvIta1"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:text="1. 알파벳과 발음"
                                android:textColor="@color/main_text"
                                android:textSize="15dp"></TextView>

                        </LinearLayout>

                        <!-- 2 -->
                        <LinearLayout
                            android:id="@+id/llIta2"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnIta2"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:background="@drawable/pastel_ripple_ita"
                                android:fontFamily="@font/nunitosans_900"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="IL SALUTO"
                                android:textColor="@color/ita_background"
                                android:textSize="25dp"></Button>

                            <TextView
                                android:id="@+id/tvIta2"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:text="2. 인사말"
                                android:textColor="@color/main_text"
                                android:textSize="15dp"></TextView>

                        </LinearLayout>

                        <!-- 3 -->
                        <LinearLayout
                            android:id="@+id/llIta3"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnIta3"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:background="@drawable/pastel_ripple_ita"
                                android:fontFamily="@font/nunitosans_900"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="I NUMERI"
                                android:textColor="@color/ita_background"
                                android:textSize="25dp"></Button>

                            <TextView
                                android:id="@+id/tvIta3"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:text="3. 숫자"
                                android:textColor="@color/main_text"
                                android:textSize="15dp"></TextView>

                        </LinearLayout>

                        <!-- 4 -->
                        <LinearLayout
                            android:id="@+id/llIta4"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnIta4"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:background="@drawable/pastel_ripple_ita"
                                android:fontFamily="@font/nunitosans_900"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="LA DATA E L'ORA"
                                android:textColor="@color/ita_background"
                                android:textSize="25dp"></Button>

                            <TextView
                                android:id="@+id/tvIta4"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:text="4. 날짜와 시간"
                                android:textColor="@color/main_text"
                                android:textSize="15dp"></TextView>

                        </LinearLayout>

                        <!-- 5 -->
                        <LinearLayout
                            android:id="@+id/llIta5"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnIta5"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:background="@drawable/pastel_ripple_ita"
                                android:fontFamily="@font/nunitosans_900"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="IL CORPO"
                                android:textColor="@color/ita_background"
                                android:textSize="25dp"></Button>

                            <TextView
                                android:id="@+id/tvIta5"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:text="5. 신체"
                                android:textColor="@color/main_text"
                                android:textSize="15dp"></TextView>

                        </LinearLayout>

                        <!-- 6 -->
                        <LinearLayout
                            android:id="@+id/llIta6"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnIta6"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:background="@drawable/pastel_ripple_ita"
                                android:fontFamily="@font/nunitosans_900"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="LA FAMIGLIA"
                                android:textColor="@color/ita_background"
                                android:textSize="25dp"></Button>

                            <TextView
                                android:id="@+id/tvIta6"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:text="6. 가족"
                                android:textColor="@color/main_text"
                                android:textSize="15dp"></TextView>

                        </LinearLayout>

                        <!-- 7 -->
                        <LinearLayout
                            android:id="@+id/llIta7"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnIta7"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:background="@drawable/pastel_ripple_ita"
                                android:fontFamily="@font/nunitosans_900"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="I CIBI"
                                android:textColor="@color/ita_background"
                                android:textSize="25dp"></Button>

                            <TextView
                                android:id="@+id/tvIta7"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:text="7. 음식"
                                android:textColor="@color/main_text"
                                android:textSize="15dp"></TextView>

                        </LinearLayout>

                        <!-- 8 -->
                        <LinearLayout
                            android:id="@+id/llIta8"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnIta8"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:background="@drawable/pastel_ripple_ita"
                                android:fontFamily="@font/nunitosans_900"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="GLI AGGETTIVI"
                                android:textColor="@color/ita_background"
                                android:textSize="25dp"></Button>

                            <TextView
                                android:id="@+id/tvIta8"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:text="8. 형용사"
                                android:textColor="@color/main_text"
                                android:textSize="15dp"></TextView>

                        </LinearLayout>

                        <!-- 9 -->
                        <LinearLayout
                            android:id="@+id/llIta9"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnIta9"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:background="@drawable/pastel_ripple_ita"
                                android:fontFamily="@font/nunitosans_900"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="I POSTI"
                                android:textColor="@color/ita_background"
                                android:textSize="25dp"></Button>

                            <TextView
                                android:id="@+id/tvIta9"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:text="9. 장소"
                                android:textColor="@color/main_text"
                                android:textSize="15dp"></TextView>

                        </LinearLayout>

                        <!-- 10 -->
                        <LinearLayout
                            android:id="@+id/llIta10"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnIta10"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:background="@drawable/pastel_ripple_ita"
                                android:fontFamily="@font/nunitosans_900"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="LE PREPOSIZIONI"
                                android:textColor="@color/ita_background"
                                android:textSize="25dp"></Button>

                            <TextView
                                android:id="@+id/tvIta10"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:text="10. 전치사"
                                android:textColor="@color/main_text"
                                android:textSize="15dp"></TextView>

                        </LinearLayout>

                        <!-- 11 -->
                        <LinearLayout
                            android:id="@+id/llIta11"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnIta11"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:background="@drawable/pastel_ripple_ita"
                                android:fontFamily="@font/nunitosans_900"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="LA FRUTTA E VERDURA"
                                android:textColor="@color/ita_background"
                                android:textSize="22dp"></Button>

                            <TextView
                                android:id="@+id/tvIta11"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:text="11. 과일과 채소"
                                android:textColor="@color/main_text"
                                android:textSize="15dp"></TextView>

                        </LinearLayout>

                        <!-- 12 -->
                        <LinearLayout
                            android:id="@+id/llIta12"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnIta12"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:background="@drawable/pastel_ripple_ita"
                                android:fontFamily="@font/nunitosans_900"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="IL CUCINARE"
                                android:textColor="@color/ita_background"
                                android:textSize="25dp"></Button>

                            <TextView
                                android:id="@+id/tvIta12"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:text="12. 요리"
                                android:textColor="@color/main_text"
                                android:textSize="15dp"></TextView>

                        </LinearLayout>

                        <!-- 13 -->
                        <LinearLayout
                            android:id="@+id/llIta13"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnIta13"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:background="@drawable/pastel_ripple_ita"
                                android:fontFamily="@font/nunitosans_900"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="LO SHOPPING"
                                android:textColor="@color/ita_background"
                                android:textSize="25dp"></Button>

                            <TextView
                                android:id="@+id/tvIta13"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:text="13. 쇼핑"
                                android:textColor="@color/main_text"
                                android:textSize="15dp"></TextView>

                        </LinearLayout>

                        <!-- 14 -->
                        <LinearLayout
                            android:id="@+id/llIta14"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnIta14"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:background="@drawable/pastel_ripple_ita"
                                android:fontFamily="@font/nunitosans_900"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="I PAESI"
                                android:textColor="@color/ita_background"
                                android:textSize="25dp"></Button>

                            <TextView
                                android:id="@+id/tvIta14"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:text="14. 국가"
                                android:textColor="@color/main_text"
                                android:textSize="15dp"></TextView>

                        </LinearLayout>

                        <!-- 15 -->
                        <LinearLayout
                            android:id="@+id/llIta15"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnIta15"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:background="@drawable/pastel_ripple_ita"
                                android:fontFamily="@font/nunitosans_900"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="IL VIAGGIO"
                                android:textColor="@color/ita_background"
                                android:textSize="25dp"></Button>

                            <TextView
                                android:id="@+id/tvIta15"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:text="15. 여행"
                                android:textColor="@color/main_text"
                                android:textSize="15dp"></TextView>

                        </LinearLayout>

                    </LinearLayout>

                    <Space
                        android:layout_width="30dp"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <!-- Menu Bar (Bottom) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_menubar"
            android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"></Space>

            <!-- Sidebar -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btnSidebar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/custom_ripple_transparent"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_sidebar"></ImageButton>

            </LinearLayout>

            <!-- Home -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btnHome"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/custom_ripple_transparent"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_home"></ImageButton>

            </LinearLayout>

            <!-- Update -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btnUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/custom_ripple_transparent"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_update"></ImageButton>

            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"></Space>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/activity_drawer" />

</androidx.drawerlayout.widget.DrawerLayout>