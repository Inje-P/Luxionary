<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_bg"
        android:orientation="vertical">

        <!-- Profile -->
        <LinearLayout
            android:id="@+id/layoutProfile"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/top_white"
            android:elevation="5dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="30dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Profile Section -->
                <LinearLayout
                    android:id="@+id/llProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.6">

                            <TextView
                                android:id="@+id/tvTitle1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/nunitosans_900"
                                android:gravity="center|bottom"
                                android:text="ENGLISH IOI"
                                android:textColor="@color/eng_background"
                                android:textSize="40dp"></TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/tvTitle2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center|top"
                                android:text="영어 첫걸음"
                                android:textColor="@color/main_text"
                                android:textSize="18dp"></TextView>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="30dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <!-- ScrollView -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent">

            <!-- Container -->
            <LinearLayout
                android:id="@+id/layoutContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Main Layout -->
                <LinearLayout
                    android:id="@+id/layoutMain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="20dp"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="20dp"/>

                        <!-- 1 -->
                        <LinearLayout
                            android:id="@+id/llEng1"
                            android:layout_width="match_parent"
                            android:layout_height="110dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnEng1"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_margin="10dp"
                                android:background="@drawable/ripple_eng_full"
                                android:elevation="3dp"
                                android:fontFamily="@font/nunitosans_900"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="ALPHABET"
                                android:textColor="@color/eng_background"
                                android:textSize="22dp"></Button>

                            <TextView
                                android:id="@+id/tvEng1"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:text="알파벳과 발음"
                                android:textColor="@color/main_text"
                                android:textSize="16dp"></TextView>

                        </LinearLayout>

                        <!-- 2 -->
                        <LinearLayout
                            android:id="@+id/llEng2"
                            android:layout_width="match_parent"
                            android:layout_height="110dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnEng2"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_margin="10dp"
                                android:background="@drawable/ripple_eng"
                                android:elevation="2dp"
                                android:fontFamily="@font/nunitosans_900"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="1. GREETING"
                                android:textColor="@color/main_text"
                                android:textSize="22dp"></Button>

                            <TextView
                                android:id="@+id/tvEng2"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:text="인사말"
                                android:textColor="@color/main_text"
                                android:textSize="16dp"></TextView>

                        </LinearLayout>

                        <!-- 3 -->
                        <LinearLayout
                            android:id="@+id/llEng3"
                            android:layout_width="match_parent"
                            android:layout_height="110dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnEng3"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_margin="10dp"
                                android:background="@drawable/ripple_eng"
                                android:elevation="2dp"
                                android:fontFamily="@font/nunitosans_900"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="2. NUMBERS"
                                android:textColor="@color/main_text"
                                android:textSize="22dp"></Button>

                            <TextView
                                android:id="@+id/tvEng3"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:text="숫자"
                                android:textColor="@color/main_text"
                                android:textSize="16dp"></TextView>

                        </LinearLayout>

                        <!-- 4 -->
                        <LinearLayout
                            android:id="@+id/llEng4"
                            android:layout_width="match_parent"
                            android:layout_height="110dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnEng4"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_margin="10dp"
                                android:background="@drawable/ripple_eng"
                                android:elevation="2dp"
                                android:fontFamily="@font/nunitosans_900"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="3. DATE AND TIME"
                                android:textColor="@color/main_text"
                                android:textSize="22dp"></Button>

                            <TextView
                                android:id="@+id/tvEng4"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:text="날짜와 시간"
                                android:textColor="@color/main_text"
                                android:textSize="16dp"></TextView>

                        </LinearLayout>

                        <!-- 5 -->
                        <LinearLayout
                            android:id="@+id/llEng5"
                            android:layout_width="match_parent"
                            android:layout_height="110dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnEng5"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_margin="10dp"
                                android:background="@drawable/ripple_eng"
                                android:elevation="2dp"
                                android:fontFamily="@font/nunitosans_900"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="4. FAMILY"
                                android:textColor="@color/main_text"
                                android:textSize="22dp"></Button>

                            <TextView
                                android:id="@+id/tvEng5"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:text="가족"
                                android:textColor="@color/main_text"
                                android:textSize="16dp"></TextView>

                        </LinearLayout>

                        <!-- 6 -->
                        <LinearLayout
                            android:id="@+id/llEng6"
                            android:layout_width="match_parent"
                            android:layout_height="110dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnEng6"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_margin="10dp"
                                android:background="@drawable/ripple_eng"
                                android:elevation="2dp"
                                android:fontFamily="@font/nunitosans_900"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="5. BODY"
                                android:textColor="@color/main_text"
                                android:textSize="22dp"></Button>

                            <TextView
                                android:id="@+id/tvEng6"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:text="신체"
                                android:textColor="@color/main_text"
                                android:textSize="16dp"></TextView>

                        </LinearLayout>

                        <!-- 7 -->
                        <LinearLayout
                            android:id="@+id/llEng7"
                            android:layout_width="match_parent"
                            android:layout_height="110dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnEng7"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_margin="10dp"
                                android:background="@drawable/ripple_eng"
                                android:elevation="2dp"
                                android:fontFamily="@font/nunitosans_900"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="6. EATING OUT"
                                android:textColor="@color/main_text"
                                android:textSize="22dp"></Button>

                            <TextView
                                android:id="@+id/tvEng7"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:text="외식"
                                android:textColor="@color/main_text"
                                android:textSize="16dp"></TextView>

                        </LinearLayout>

                        <!-- 8 -->
                        <LinearLayout
                            android:id="@+id/llEng8"
                            android:layout_width="match_parent"
                            android:layout_height="110dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnEng8"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_margin="10dp"
                                android:background="@drawable/ripple_eng"
                                android:elevation="2dp"
                                android:fontFamily="@font/nunitosans_900"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="7. FOODS"
                                android:textColor="@color/main_text"
                                android:textSize="22dp"></Button>

                            <TextView
                                android:id="@+id/tvEng8"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:text="음식"
                                android:textColor="@color/main_text"
                                android:textSize="16dp"></TextView>

                        </LinearLayout>

                        <!-- 9 -->
                        <LinearLayout
                            android:id="@+id/llEng9"
                            android:layout_width="match_parent"
                            android:layout_height="110dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnEng9"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_margin="10dp"
                                android:background="@drawable/ripple_eng"
                                android:elevation="2dp"
                                android:fontFamily="@font/nunitosans_900"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="8. ADJECTIVES"
                                android:textColor="@color/main_text"
                                android:textSize="22dp"></Button>

                            <TextView
                                android:id="@+id/tvEng9"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:text="형용사"
                                android:textColor="@color/main_text"
                                android:textSize="16dp"></TextView>

                        </LinearLayout>

                        <!-- 10 -->
                        <LinearLayout
                            android:id="@+id/llEng10"
                            android:layout_width="match_parent"
                            android:layout_height="110dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnEng10"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_margin="10dp"
                                android:background="@drawable/ripple_eng"
                                android:elevation="2dp"
                                android:fontFamily="@font/nunitosans_900"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="9. PLACES"
                                android:textColor="@color/main_text"
                                android:textSize="22dp"></Button>

                            <TextView
                                android:id="@+id/tvEng10"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:text="장소"
                                android:textColor="@color/main_text"
                                android:textSize="16dp"></TextView>

                        </LinearLayout>

                        <!-- 11 -->
                        <LinearLayout
                            android:id="@+id/llEng11"
                            android:layout_width="match_parent"
                            android:layout_height="110dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnEng11"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_margin="10dp"
                                android:background="@drawable/ripple_eng"
                                android:elevation="2dp"
                                android:fontFamily="@font/nunitosans_900"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="10. PREPOSITIONS"
                                android:textColor="@color/main_text"
                                android:textSize="22dp"></Button>

                            <TextView
                                android:id="@+id/tvEng11"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:text="전치사"
                                android:textColor="@color/main_text"
                                android:textSize="16dp"></TextView>

                        </LinearLayout>

                        <!-- 12 -->
                        <LinearLayout
                            android:id="@+id/llEng12"
                            android:layout_width="match_parent"
                            android:layout_height="110dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnEng12"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_margin="10dp"
                                android:background="@drawable/ripple_eng"
                                android:elevation="2dp"
                                android:fontFamily="@font/nunitosans_900"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="11. COOKING"
                                android:textColor="@color/main_text"
                                android:textSize="22dp"></Button>

                            <TextView
                                android:id="@+id/tvEng12"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:text="요리"
                                android:textColor="@color/main_text"
                                android:textSize="16dp"></TextView>

                        </LinearLayout>

                        <!-- 13 -->
                        <LinearLayout
                            android:id="@+id/llEng13"
                            android:layout_width="match_parent"
                            android:layout_height="110dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnEng13"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_margin="10dp"
                                android:background="@drawable/ripple_eng"
                                android:elevation="2dp"
                                android:fontFamily="@font/nunitosans_900"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="12. SHOPPING"
                                android:textColor="@color/main_text"
                                android:textSize="22dp"></Button>

                            <TextView
                                android:id="@+id/tvEng13"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:text="쇼핑"
                                android:textColor="@color/main_text"
                                android:textSize="16dp"></TextView>

                        </LinearLayout>

                        <!-- 14 -->
                        <LinearLayout
                            android:id="@+id/llEng14"
                            android:layout_width="match_parent"
                            android:layout_height="110dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnEng14"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_margin="10dp"
                                android:background="@drawable/ripple_eng"
                                android:elevation="2dp"
                                android:fontFamily="@font/nunitosans_900"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="13. COUNTRIES"
                                android:textColor="@color/main_text"
                                android:textSize="22dp"></Button>

                            <TextView
                                android:id="@+id/tvEng14"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:text="국가"
                                android:textColor="@color/main_text"
                                android:textSize="16dp"></TextView>

                        </LinearLayout>

                        <!-- 15 -->
                        <LinearLayout
                            android:id="@+id/llEng15"
                            android:layout_width="match_parent"
                            android:layout_height="110dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnEng15"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_margin="10dp"
                                android:background="@drawable/ripple_eng"
                                android:elevation="2dp"
                                android:fontFamily="@font/nunitosans_900"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="14. TRAVELLING"
                                android:textColor="@color/main_text"
                                android:textSize="22dp"></Button>

                            <TextView
                                android:id="@+id/tvEng15"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:text="여행"
                                android:textColor="@color/main_text"
                                android:textSize="16dp"></TextView>

                        </LinearLayout>

                        <!-- 16 -->
                        <LinearLayout
                            android:id="@+id/llEng16"
                            android:layout_width="match_parent"
                            android:layout_height="110dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnEng16"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_margin="10dp"
                                android:background="@drawable/ripple_eng_full"
                                android:elevation="2dp"
                                android:fontFamily="@font/nunitosans_900"
                                android:gravity="center"
                                android:stateListAnimator="@null"
                                android:text="BASIC VERBS"
                                android:textColor="@color/eng_background"
                                android:textSize="22dp"></Button>

                            <TextView
                                android:id="@+id/tvEng16"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:fontFamily="@font/pretendard_700"
                                android:gravity="center"
                                android:text="기초 동사"
                                android:textColor="@color/main_text"
                                android:textSize="16dp"></TextView>

                        </LinearLayout>

                    </LinearLayout>

                    <Space
                        android:layout_width="20dp"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <!-- Menu Bar (Bottom) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_menubar2"
            android:orientation="horizontal"
            android:elevation="3dp">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"></Space>

            <!-- Sidebar -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btnSidebar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/custom_ripple_transparent"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_sidebar"></ImageButton>

            </LinearLayout>

            <!-- Home -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btnHome"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/custom_ripple_transparent"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_home"></ImageButton>

            </LinearLayout>

            <!-- Update -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btnUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/custom_ripple_transparent"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_update"></ImageButton>

            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"></Space>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/activity_drawer" />

</androidx.drawerlayout.widget.DrawerLayout>