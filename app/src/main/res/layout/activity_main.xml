<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_white"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <!-- Top Menu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/main_bg1"
            android:orientation="horizontal">

            <Space
                android:layout_width="30dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Profile Section -->
                <LinearLayout
                    android:id="@+id/llProfile"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="@drawable/custom_underline"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="6.5"
                            android:gravity="bottom">

                            <TextView
                                android:id="@+id/tvTitleHello"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bebas_neue"
                                android:text="Hello,"
                                android:textColor="@color/main_gray"
                                android:textSize="25dp"></TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3.5"
                            android:gravity="bottom"
                            android:paddingBottom="10dp">

                            <TextView
                                android:id="@+id/tvTitleName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pretendard_800"
                                android:text="해리슨"
                                android:textColor="@color/main_text"
                                android:textSize="38dp"></TextView>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingBottom="10dp">

                        <LinearLayout
                            android:id="@+id/llAvatar"
                            android:layout_width="250px"
                            android:layout_height="250px"
                            android:background="@drawable/custom_main">

                            <ImageView
                                android:id="@+id/imgAvatar"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="10dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/avt_male1"></ImageView>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="30dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <!-- ScrollView -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Container -->
                <LinearLayout
                    android:id="@+id/layoutMain1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/main_white"
                    android:orientation="vertical">

                    <!-- Main Layout 2 -->
                    <LinearLayout
                        android:id="@+id/layoutMain2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <Space
                            android:layout_width="30dp"
                            android:layout_height="match_parent" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <!-- Languages -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <!-- Date Section -->
                                <LinearLayout
                                    android:id="@+id/llDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:focusable="true"
                                    android:focusableInTouchMode="true"
                                    android:orientation="horizontal">

                                    <Space
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="7"></Space>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="3"
                                        android:orientation="horizontal">

                                        <Button
                                            android:id="@+id/btnDate"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginTop="3dp"
                                            android:layout_marginRight="5dp"
                                            android:layout_marginBottom="3dp"
                                            android:layout_weight="6"
                                            android:background="@drawable/ripple_black_underline"
                                            android:fontFamily="@font/bebas_neue"
                                            android:gravity="center"
                                            android:stateListAnimator="@null"
                                            android:text="TODAY"
                                            android:textColor="@color/main_text"
                                            android:textCursorDrawable="@drawable/text_cursor2"
                                            android:textSize="35dp" />

                                    </LinearLayout>

                                </LinearLayout>

                                <!-- Banner -->
                                <LinearLayout
                                    android:id="@+id/llBanner"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@android:color/transparent"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tvBanner1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/pretendard_800"
                                        android:text="어떤 언어를"
                                        android:textColor="@color/main_text"
                                        android:textSize="30dp"></TextView>

                                    <TextView
                                        android:id="@+id/tvBanner2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/pretendard_800"
                                        android:text="배워보시겠어요?"
                                        android:textColor="@color/main_text"
                                        android:textSize="30dp"></TextView>

                                </LinearLayout>

                                <!-- Center Img -->
                                <LinearLayout
                                    android:id="@+id/llCenterImg"
                                    android:layout_width="match_parent"
                                    android:layout_height="180dp"
                                    android:background="@drawable/main_bg2"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tvCenterImg"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/pretendard_800"
                                        android:gravity="center"
                                        android:text="LUXIONARY"
                                        android:textColor="@color/main_text"
                                        android:textSize="55dp"></TextView>

                                </LinearLayout>

                                <!-- English -->
                                <LinearLayout
                                    android:id="@+id/llEng"
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"
                                    android:layout_marginTop="10dp"
                                    android:orientation="vertical"
                                    android:paddingTop="20dp">

                                    <Button
                                        android:id="@+id/btnEng"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/ripple_eng_underline"
                                        android:fontFamily="@font/nunitosans_900"
                                        android:gravity="center_vertical"
                                        android:stateListAnimator="@null"
                                        android:text="ENGLISH"
                                        android:textColor="@color/main_text"
                                        android:textSize="28dp" />

                                </LinearLayout>

                                <!-- French -->
                                <LinearLayout
                                    android:id="@+id/llFra"
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"
                                    android:layout_marginTop="10dp"
                                    android:orientation="vertical"
                                    android:paddingTop="20dp">

                                    <Button
                                        android:id="@+id/btnFra"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/ripple_fra_underline"
                                        android:fontFamily="@font/nunitosans_900"
                                        android:gravity="center_vertical"
                                        android:text="FRANÇAIS"
                                        android:textColor="@color/main_text"
                                        android:textSize="28dp" />

                                </LinearLayout>

                                <!-- German -->
                                <LinearLayout
                                    android:id="@+id/llDeu"
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"
                                    android:layout_marginTop="10dp"
                                    android:orientation="vertical"
                                    android:paddingTop="20dp">

                                    <Button
                                        android:id="@+id/btnDeu"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/ripple_deu_underline"
                                        android:fontFamily="@font/nunitosans_900"
                                        android:gravity="center_vertical"
                                        android:text="DEUTSCH"
                                        android:textColor="@color/main_text"
                                        android:textSize="28dp" />

                                </LinearLayout>

                                <!-- Italian -->
                                <LinearLayout
                                    android:id="@+id/llIta"
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"
                                    android:layout_marginTop="10dp"
                                    android:orientation="vertical"
                                    android:paddingTop="20dp">

                                    <Button
                                        android:id="@+id/btnIta"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/ripple_ita_underline"
                                        android:fontFamily="@font/nunitosans_900"
                                        android:gravity="center_vertical"
                                        android:text="ITALIANO"
                                        android:textColor="@color/main_text"
                                        android:textSize="28dp" />

                                </LinearLayout>

                                <!-- Spanish -->
                                <LinearLayout
                                    android:id="@+id/llSpa"
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"
                                    android:layout_marginTop="10dp"
                                    android:orientation="vertical"
                                    android:paddingTop="20dp">

                                    <Button
                                        android:id="@+id/btnSpa"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/ripple_spa_underline"
                                        android:fontFamily="@font/nunitosans_900"
                                        android:gravity="center_vertical"
                                        android:text="ESPAÑOL"
                                        android:textColor="@color/main_text"
                                        android:textSize="28dp" />

                                </LinearLayout>

                                <!-- Russian -->
                                <LinearLayout
                                    android:id="@+id/llRus"
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"
                                    android:layout_marginTop="10dp"
                                    android:orientation="vertical"
                                    android:paddingTop="20dp">

                                    <Button
                                        android:id="@+id/btnRus"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/ripple_rus_underline"
                                        android:fontFamily="@font/nunitosans_900"
                                        android:gravity="center_vertical"
                                        android:text="РУССКИЙ"
                                        android:textColor="@color/main_text"
                                        android:textSize="28dp" />

                                </LinearLayout>

                                <!-- Bottom Img -->
                                <LinearLayout
                                    android:id="@+id/llBottomImg"
                                    android:layout_width="match_parent"
                                    android:layout_height="180dp"
                                    android:background="@drawable/main_bg3"
                                    android:gravity="center_vertical"
                                    android:layout_marginTop="20dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tvBottomImg1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/pretendard_800"
                                        android:textAlignment="textEnd"
                                        android:text="외국어 공부가"
                                        android:textColor="@color/main_text"
                                        android:textSize="30dp"></TextView>

                                    <TextView
                                        android:id="@+id/tvBottomImg2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/pretendard_800"
                                        android:textAlignment="textEnd"
                                        android:text="일상이 됩니다"
                                        android:textColor="@color/main_text"
                                        android:textSize="30dp"></TextView>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <Space
                            android:layout_width="30dp"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <!-- Menu Bar (Bottom) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_menubar2"
            android:orientation="horizontal"
            android:elevation="3dp">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"></Space>

            <!-- Sidebar -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btnSidebar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/custom_ripple_transparent"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_sidebar"></ImageButton>

            </LinearLayout>

            <!-- Home -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btnHome"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/custom_ripple_transparent"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_home"></ImageButton>

            </LinearLayout>

            <!-- Update -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btnUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/custom_ripple_transparent"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_update"></ImageButton>

            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"></Space>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/activity_drawer" />

</androidx.drawerlayout.widget.DrawerLayout>
